<h1>Eat Da Burger!</h1>

<div class="row">
    <div class="col-6">
        <ul>
            {{#each burgers}}
            {{#unless devoured}}
            <p>
                {{id}}. {{burger_name}}
                <button class="eat" data-id="{{id}}">Devour!</button>
            </p>
            {{/unless}}
            {{/each}}
        </ul>
    </div>

    <div class="col-6">
        <ul>
            {{#each burgers}}
            {{#if devoured}}
            <p>
                {{id}}. {{burger_name}}
                <button disabled>Devoured.</button>
            </p>
            {{/if}}
            {{/each}}
        </ul>

    </div>
</div>

<form id="done">
    <div class="form-group">
        <label for="add-burger">Make your burger</label>
        <input type="text" class="form-control" id="add-burger">
    </div>
    <button type="submit" class="btn btn-primary">Create burger</button>
</form>